{% extends "base.html.twig" %}

{% block title %}
	Édition de
	{{ product.name }}
{% endblock %}

{% block body %}
	<h1>Éditer le produit
		{{ product.name }}</h1>
	{{ form_start(formView) }}

	<div class="row">
		<div class="col">
			{{ form_row(formView.name) }}
			{{ form_row(formView.price) }}
		</div>
		<div class="col">
			{{ form_row(formView.mainPicture) }}
			{{ form_row(formView.category) }}
			{{ form_row(formView.shortDescription) }}
		</div>
	</div>
	<button type="submit" class="btn btn-primary">
		<i class="fas fa-save">Modifier le produit</i>
	</button>

	{{ form_end(formView) }}
{% endblock %}
