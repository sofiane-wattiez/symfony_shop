{% extends "base.html.twig" %}

{% block title %}
	<h1>Liste des cat√©gories</h1>
{% endblock %}

{% block body %}
	<table class="table table-hover">
		<thead>
			<tr class="table-light">
				<th scope="col">Id</th>
				<th scope="col">Name</th>
				<th scope="col">Slug</th>
			</tr>
		</thead>
		{% for c in categories %}
			<tbody>
				<tr class="table-light">
					<td>{{ c.id }}</td>
					<td>{{ c.name }}</td>
					<td>{{ c.slug }}</td>
					<td>
						<a href="{{ path('product_category', {'slug': c.slug}) }}" class="btn btn-primary btn-sm">Liste produits</a>
					</td>
					<td>
						<a href="{{ path('category_edit', {'id': c.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
					</td>
					<td>
						<a href="{{ path('category_remove', {'id': c.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
					</td>
				</tr>
			</tbody>
		{% endfor %}
	</table>
{% endblock %}
